{
  "name": "nodebb-plugin-openedx-discussion",
  "version": "0.0.1",
  "description": "Nodebb plugin for integrating nodebb discussion into openedx.",
  "main": "library.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/arbisoft/nodebb-plugin-openedx-discussion"
  },
  "keywords": [
    "nodebb",
    "plugin",
    "openedx",
    "discussion"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": {
    "name": "Arbisoft"
  },
  "license": "GPLv3",
  "readmeFilename": "README.md",
  "nbbpm": {
    "compatibility": "^1.0.0"
  },
  "dependencies": {
    "nodebb-plugin-session-sharing": ">=4.4.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-angular": "^7.3.1",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodebb-plugin-session-sharing": "^4.4.5"
  }
}
